@model System.Collections.Generic.IEnumerable<ProductViewModel>

<table class="table is-striped is-hoverable is-fullwidth">
  <tr>
    <th>
      Id
    </th>
    <th>
      Name
    </th>
    <th>
    </th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @item.Id
      </td>
      <td>
        @item.Name
      </td>
      <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
      </td>
    </tr>
  }
</table>