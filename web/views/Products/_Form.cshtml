@model ProductViewModel

<form method="post" id="_Form">

  <div class="field">
    <label class="label" asp-for="Id"></label>
    <div class="control">
      <input class="input" asp-for="Id" readonly>
    </div>
  </div>
  <div class="field">
    <label class="label" asp-for="Sku"></label>
    <div class="control">
      <input class="input" asp-for="Sku">
    </div>
  </div>
  <div class="field">
    <label class="label" asp-for="Name"></label>
    <div class="control">
      <input class="input" asp-for="Name">
    </div>
  </div>

</form>